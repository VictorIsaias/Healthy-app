<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/introduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/lexend"
        android:text="@string/texto3"
        android:textSize="22sp" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="133dp"
        android:layout_above="@+id/introduccion"
        android:layout_alignEnd="@+id/introduccion"
        android:layout_centerInParent="true"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="18dp"
        android:contentDescription="@string/texto3"
        android:src="@drawable/baseline_warning_24" />

</RelativeLayout>